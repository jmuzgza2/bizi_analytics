services:
  db:
    image: postgres:15-alpine
    container_name: bizi_db_local
    # En vez de escribir la clave, le decimos a Docker:
    # "Busca la variable POSTGRES_USER en el archivo .env"
    environment:
      - POSTGRES_DB=${POSTGRES_DB}
      - POSTGRES_USER=${POSTGRES_USER}
      - POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
    ports:
      - "5433:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data:
